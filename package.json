{
  "displayName": "Homebridge Midea Platform",
  "name": "homebridge-midea-platform",
  "version": "1.0.6-beta.6",
  "description": "Homebridge plugin for Midea devices",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kovapatrik/homebridge-midea.git"
  },
  "bugs": {
    "url": "https://github.com/kovapatrik/homebridge-midea/issues"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/kovapatrik"
    },
    {
      "type": "buymeacoffee",
      "url": "https://www.buymeacoffee.com/kovapatrik"
    }
  ],
  "engines": {
    "node": "^18.17.0 || ^20.9.0",
    "homebridge": "^1.6.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint . --cache --ext .ts",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build",
    "format": "prettier --log-level warn --write \"**/*.ts\" && npm run lint -- --fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [
    "homebridge-plugin"
  ],
  "dependencies": {
    "@homebridge/plugin-ui-utils": "^1.0.0",
    "axios": "^1.5.0",
    "fast-xml-parser": "^4.2.7",
    "lodash": "^4.17.21",
    "luxon": "^3.4.2",
    "semaphore-promise": "^1.4.2"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.200",
    "@types/luxon": "^3.3.1",
    "@types/node": "^18.16.20",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "homebridge": "^1.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
